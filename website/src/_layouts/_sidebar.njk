{% extends "./_base.njk" %}

{% block content %}

<div class="flex" data-bind="with: mainMenu">
	<div class="sidebar w-64 sm:block flex-none pr-4 border-r border-gray-200 fixed bg-white overflow-y-auto top-0 bottom-0 mt-16 pt-6 pl-4 sm:pl-0" data-bind="css: { hidden: !sidebarOpen() }, event: { click: handleSidebarClick }">
		<div class="flex sm:hidden items-center mb-8">
			<h1 class="text-lg font-bold flex-grow">{{ title }}</h1>
			<a href="#" class="text-gray-400 hover:text-gray-500" data-bind="click: closeSidebar">
				<svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
				</svg>
			</a>
		</div>
		{% block sidebar %}{% endblock %}
	</div>
	<div class="content px-4 pb-8 pt-4 min-w-0 ml-0 sm:ml-64">
		<a href="#" class="text-sm text-gray-400 sm:hidden no-underline hover:underline" data-bind="click: openSidebar">Menu</a>
		<h1>{{ title }}</h1>
		{{ content | safe }}
	</div>
</div>

{% endblock %}
